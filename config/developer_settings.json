{
  "developer": {
    "full_power": false,
    "max_credits": 200,
    "daily_reset_hour": 0,
    "auto_backup": true,
    "backup_interval_hours": 24,
    "credits_per_message": 1,
    "credits_refill_per_hour": 50,
    
    "model_settings": {
      "allow_model_switch": false,
      "current_model": "gpt2",
